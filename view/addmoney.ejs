<!DOCTYPE html>
<html>
<head>
    Add Money to your wallet
</head>

    <style>
     .button {
         background-color: #4CAF50; /* Green */
         border: none;
         color: white;
         text-align: center;
         text-decoration: none;
         display: inline-block;
         font-size: 16px;
         margin: 4px 2px;
         cursor: pointer;
         padding: 10px 50px;
         align : center;
     }
     .loading{
         display : none;
     }
     .pay{
         display:none;
     }
     .input{
        align : center
     }
     .button1 {
         padding : 30x 120x
     }
</style>
<body>
<script src="https://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
<script src="/socket.io-client/dist/socket.io.js"></script>
<script>
    var socket = io.connect();
    $(window).load(function (e) {
        e.preventDefault();
            $('#loading').hide();
            socket.emit("emitUser",{userid:"<= user._id %>"});
            socket.on("emitUser ack",function(){
              socket.emit("getRating",{userid:"<%= user._id %>"})
              socket.on("getRating ack",function(data) {
                  $("#rating").html(data.rating)
              })
            socket.emit("getPayment");
            socket.on("getPayment ack",function (data) {
                for(var i = 0 ; i < data.length ; i++){
                $("#payment").append(
                    "<button class = \"button\" value ="+data[i]+" onclick=\"paymethod(this)\">"+ data[i] +"</button>"

            )}



            })

    })

    })
    function paymethod(data) {
        console.log(data.value)
            if(data.value == 'UPI'){
                $("#UPI").show();
                $("#payment").hide();
            }
            if(data.value == 'Aadhar')
            $("#Aadhar").show();
            if(data.value == 'Bhamashah') {
                $("#loading").show();
                setInterval(4000)
                $("#loading").hide();
                $("#bhamashah").show();

            }
            if(data.value == "RupayCard")
                $("#loader").show()
                $("#RupayCard").show();


        }
    function addmoney(data) {
        if(data.value == "UPI"){
            $("#loading").show();
            setTimeout(function () {
                $("loading").hide();
            },8000)

        }
    }

</script>
<div id = "payment" align = "center">
</div>

<div id="UPI" class = "pay">
<form >
    <br>
    <br>
    <p align="center">Enter your UPI Address:<p>
    <center><input type = "text" name = "upi" value = "UPI Address" </center>
    <button value="UPI" onclick="addmoney(this)"> Submit</button>
    <br>
</form>
</div>
<div id="Aadhar" class = "pay">
    <p align = "center">Enter the Aadhar Number:</p>
    <input type = "text" name = "aadhar" value = "Aadhar Details">
    <button > Validate </button>
</div>
<div id="bhamashah" class="pay">

    Detecting the device
</div>
<div id = "rupayCard" class="pay"></div>
<div id="loading">
    <img id="loading-image" src="gif/bolt.gif" alt="Loading..." />
  </div>

</body>
</html>